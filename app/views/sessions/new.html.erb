<div class="container">
<h1>Log in to the Alpha Blog</h1>
    <%= form_with(scope: :session, url:login_path, local: true) do |form| %>
    <div class="form-group shadow p-3 mb-5 bg-white rounded">
        <div class="mb-3">
        <div class="field">
            <%= form.label :email, class: "form-label" %>
            <br>
            <%= form.email_field :email, class: "form-control", placeholder:"Enter your E-mail Adress"  %>
        </div>
        </div>

        <div class="mb-3">
        <div class="field">
            <%= form.label :password, class: "form-label" %>
            <br>
            <%= form.password_field :password, class: "form-control", placeholder:"Enter your Password"  %>
        </div>
        </div>

        <div class="mb-3">
        <div class="actions">
            <%= form.submit("Log in", class: "btn btn-primary mt-3") %>
        </div>
        </div>
    </div>
    <% end %>
</div>