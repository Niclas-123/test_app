<h1 class="text-center">All of our Users</h1>

<div class="apple_pagination">
    <div class="page_info">
      <%= page_entries_info @users %>
    </div>
    <%= will_paginate @users, :container => false %>
</div>

<% @users.each do |user| %>
  <div class="row justify-content-md-center">
    <div class="col-8">
      <div class="card text-center mt-5 shadow p-3 mb-5 bg-white rounded">
        <div class="card-header">
          <h3><%= user.username %></h3>
        </div>
        <div class="card-body">
          <div class="card-title"><%= gravatar_for user, size: 150 %></div>
          <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
          <%= link_to 'View Profile', user, class: "btn btn-outline-primary" %>
          <%= link_to 'Edit Profile', edit_user_path(user), class: "btn btn-outline-primary" %>
        </div>
        <div class="card-footer text-muted mt-3">
          <p>Joined: <%= time_ago_in_words(user.created_at) %> ago</p>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="apple_pagination mb-4">
    <div class="page_info">
      <%= page_entries_info @users %>
    </div>
    <%= will_paginate @users, :container => false %>
</div>